<div class="main row">
  <nav class="sidebar col-md-2">
    <ul class="platforms__categories">
      <h5 class="platform__header">Platforms</h5>
      {{#each model.platforms as |platform|}}
        <li class="platforms__detail">
          {{#link-to 'index.platform' platform.id}}
            <img class="platform__icon" src= {{platform.logo}} alt="logo" />
            {{platform.name}}
          {{/link-to}}
        </li>
      {{/each}}
      <li class="platforms__detail">
        {{#link-to 'index.manage-platforms'}}
          <p class="add-platform btn btn-purple btn-embossed btn-sm">Add Your Platform</p>
        {{/link-to}}
      </li>
    </ul>

    <footer class="footer">
      <p class="legal">Made by @steftheo11</p>
    </footer>
  </nav>

  <div class="content col-md-8">
    {{outlet}}
  </div>
</div>
