<div class="modal fade modal--active" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        {{#link-to 'index'}}
          <button type="button" class="close-form glyphicon glyphicon-remove" data-dismiss="modal"></button>
        {{/link-to}}
        <h4 class="modal-title" id="myModalLabel">Post a new bot</h4>
      </div>

      {{#simple-form onsubmit=(action saveBot) as |formValues|}}
        <div class="modal-body">
          <form class="form-horizontal" role="form">
            <div class="form-group form-group-sm">
              <label class="col-sm-3 control-label">Name</label>
              <div class="col-sm-9">
                <div class="input-group">
                  <span class="input-group-addon ss-write"></span> <p>{{input type="text" class="form-control input-sm" placeholder="Bot Name" value=formValues.name}}</p>
                </div>
              </div>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-3 control-label">Link</label>
              <div class="col-sm-9">
                <div class="input-group">
                  <span class="input-group-addon ss-globe"></span> <p>{{input type="link" class="form-control input-sm" placeholder="Link to Bot" value=formValues.websiteUrl}}</p>
                </div>
              </div>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-3 control-label">Description</label>
              <div class="col-sm-9">
                <div class="input-group">
                  <span class="input-group-addon ss-quote"></span> <p>{{input type="text" class="form-control" placeholder="Tagline" value=formValues.description}}</p>
                </div>
              </div>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-3 control-label">Platform</label>
              <ul class="platform-checks">
                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform checked=isSelected}} Messenger
                  </label>
                </li>

                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform checked=isSelected}} Slack
                  </label>
                </li>

                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform checked=isSelected}} Telegram
                  </label>
                </li>

                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform checked=isSelected}} Kik
                  </label>
                </li>

                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform data-toggle="checkbox"}} SMS/Text
                  </label>
                </li>

                <li>
                  <label class="checkbox">
                    <span class="icons">
                <span class="first-icon"></span>
                    </span>
                    {{input value=formValues.platform checked=isSelected}} Whatsapp
                  </label>
                </li>
              </ul>
            </div>

            <div class="form-group form-group-sm">
              <label class="col-sm-3 control-label">Image</label>
              <div class="col-sm-9">
                <div class="input-group">
                  <span class="input-group-addon ss-downloadcloud"></span> <p>{{input type="media" value=formValues.imageUrl class="form-control" placeholder="Image Url"}}</p>
                </div>
              </div>
            </div>
          </form>
        </div>

  <div class="modal-footer">
      <button class="btn btn-purple btn-embossed add-bot__submit">Submit Bot!</button>
  </div>
  {{/simple-form}}
  </div>
  </div>
  </div>
