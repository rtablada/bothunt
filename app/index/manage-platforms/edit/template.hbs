<h1>Edit Platform</h1>

{{#simple-form startingValues=model onsubmit=(action savePlatform model) as |formValues|}}
  <p>{{profile-upload fileUrl=formValues.logo placeholderUrl="images/ui-face-1.png" onchange=(action (mut formValues.logo))}}</p>

  <p>{{input placeholder="URL" value=formValues.url}}</p>

  <p>{{input placeholder="Name" value=formValues.name}}</p>

  <p>{{#link-to 'index.manage-platforms'}}Cancel{{/link-to}}

  <button>Save</button>
  </p>
{{/simple-form}}
