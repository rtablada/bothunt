<div class="welcome-text">
  <h3 class="welcome-heading">Welcome to Bot Hunt!</h3>
  <p class="welcome-subtext">The Best Way to Find & Share New ChatBots</p>
</div>

<div class="main">
  <nav class="sidebar">
    <ul class="platforms__categories">
      <h5 class="platform__header">Platforms</h5>
      {{#each model.platforms as |platform|}}
      <li class="platforms__detail">
        <a href="#"><img class="platform__icon" src="images/messenger.png" alt="messenger" />
          {{platform.name}}
        </a>
      </li>
      {{/each}}
    </ul>

    <footer class="footer">
      <p>Contact</p>
      <p class="legal">Made by @steftheo11</p>
    </footer>
  </nav>

  <div class="content">
    {{#each model.bots as |bot|}}
      <div class="bot-item">
        <h3 class="date">{{bot.dateAdded}}</h3>
        <ul class="list-group">
          <li class="list-group-item bot-row">
            {{#link-to 'index.bot' bot.id}}
              <div class="bot-info">
                <img src= {{bot.imageUrl}} alt="" class="bot-image">
                <div class="bot__text-info">
                  <h3 class="bot__name">{{bot.name}}</h3>
                  <p class="bot__description">{{bot.description}}</p>
                </div>
              </div>
            {{/link-to}}
            <a href= {{bot.websiteURL}}>
              <span class="ss-globe bot__website"></span>
            </a>
            <div class="like-button">
              {{!-- {{like-counter likes=bot.score}}
              --}} <button class="btn btn-default ss-star">
                <br>{{!-- {{likes}}
                --}} </button>
            </div>
          </li>
        </ul>
      </div>
    {{/each}}
  </div>
</div>
